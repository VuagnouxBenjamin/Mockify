{
  "manifest_version": 3,
  "name": "Mockify",
  "version": "1.0",
  "description": "Une extension Chrome pour Mockify",
  "permissions": ["storage", "tabs", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}